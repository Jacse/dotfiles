[
  {
    "bindings": {
      "alt-cmd-h": "workspace::ActivatePaneLeft",
      "alt-cmd-left": "workspace::ActivatePaneLeft",
      "alt-cmd-l": "workspace::ActivatePaneRight",
      "alt-cmd-right": "workspace::ActivatePaneRight",
      "alt-cmd-k": "workspace::ActivatePaneUp",
      "alt-cmd-up": "workspace::ActivatePaneUp",
      "alt-cmd-j": "workspace::ActivatePaneDown",
      "alt-cmd-down": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "shift-l": "pane::ActivateNextItem",
      "shift-h": "pane::ActivatePreviousItem",
      "cmd-d": "pane::SplitRight",
      "cmd-shift-d": "pane::SplitDown",
      "tab": "pane::ActivateNextItem",
      "shift-tab": "pane::ActivatePreviousItem",
      "space e": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Terminal || ProjectPanel",
    "bindings": {
      "space e": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "use_key_equivalents": true,
    "bindings": {
      "tab": "project_panel::Open"
    }
  },
  {
    // A for new file, D for new folder
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile"
    }
  }
]
